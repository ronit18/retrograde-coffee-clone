---
import Layout from "../layouts/Layout.astro";
import Welcome from "../components/Welcome.astro";
import { Image } from "@astrojs/image/components";
import Contactus from "../components/Contactus.astro";
---

<Layout title="Retrograde Coffee">
	<div class="relative h-screen">
		<Image
			src="/images/LattePour22.jpg"
			alt="hero"
			width="2000"
			height="1000"
			format="avif"
			quality={80}
			class="absolute inset-0 object-cover h-screen -z-10"
		/>
	</div>
	<main class="p-4 grid gap-12 text-rg-gray leading-5">
		<Welcome />
		<Contactus />
	</main>
</Layout>
